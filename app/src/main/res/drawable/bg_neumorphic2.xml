<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#393434"/>
            <corners android:radius="92dp"/>
        </shape>
    </item>

    <!-- Gradient Background Layer -->
    <item android:top="5dp" android:left="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#9550DA"
                android:endColor="#E100FF"
                android:angle="45"/>
            <corners android:radius="92dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</layer-list>

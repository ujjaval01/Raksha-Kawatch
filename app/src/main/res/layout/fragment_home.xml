<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Progress Bar (Spinner) -->
    <ProgressBar
        android:id="@+id/homeFragmentLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- Top Section with Profile Info -->
        <LinearLayout
            android:id="@+id/topSection"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_neumorphic"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Left Profile Section -->
            <LinearLayout
                android:id="@+id/profile"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/homeProfileImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_background2"
                    android:importantForAccessibility="no"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_person_24" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:text="@string/hii"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/homeProfileText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/username"
                        android:textColor="@color/red"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Right Map Location Section -->
            <LinearLayout
                android:id="@+id/mapLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/img_location" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:text="Safe Location"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/currentLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="@string/current_location"
                        android:textColor="@color/red"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Emergency Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:text="Emergency Help \nNeeded?"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- SOS Button -->
        <ImageButton
            android:id="@+id/btnSOS"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/gif_sos"
            android:contentDescription="SOS Button"
            android:scaleType="fitCenter" />
        <ProgressBar
            android:id="@+id/sosProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Press the button to send SOS"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-3dp"
            android:background="@drawable/rounded_edittext"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/bg_neumorphic3"
                android:gravity="center"
                android:text="@string/quick_shortcuts"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alignmentMode="alignMargins"
                        android:columnCount="2"
                        android:rowOrderPreserved="false"
                        android:useDefaultMargins="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPolice"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:background="@drawable/bg_neumorphic4"
                            android:text="Police \n112"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:backgroundTint="@null" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWomenHelp"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:background="@drawable/bg_neumorphic4"
                            android:text="Women Help \n1091"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:backgroundTint="@null" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFire"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:background="@drawable/bg_neumorphic4"
                            android:text="Fire Emerg \n101"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:backgroundTint="@null" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAmbulance"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:background="@drawable/bg_neumorphic4"
                            android:text="Ambulance \n108"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:backgroundTint="@null" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRailway"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:background="@drawable/bg_neumorphic4"
                            android:text="Railway \n139"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:backgroundTint="@null" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRoadAcc"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:background="@drawable/bg_neumorphic4"
                            android:text="Road Acc\n1073"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:backgroundTint="@null" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnChildHelp"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:background="@drawable/bg_neumorphic4"
                            android:text="Child Help \n1098"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:backgroundTint="@null" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCyberCrime"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:background="@drawable/bg_neumorphic4"
                            android:text="Cyber Crime\n1930"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:backgroundTint="@null" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTrainAcc"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:background="@drawable/bg_neumorphic4"
                            android:text="Train Acc\n1072"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:backgroundTint="@null" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDemo2"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:background="@drawable/bg_neumorphic4"
                            android:text="Women  \n1090"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:backgroundTint="@null" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDemo3"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:background="@drawable/bg_neumorphic4"
                            android:text="Fire \n1050"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:backgroundTint="@null" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDemo4"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:background="@drawable/bg_neumorphic4"
                            android:text="Ambulance \n108"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:backgroundTint="@null" />

                    </GridLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

